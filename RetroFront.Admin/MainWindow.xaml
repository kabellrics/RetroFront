                                                       CommandParameter="4"></i:InvokeCommandAction>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <MenuItem.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="Command" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=MenuItem},Path=DataContext.ScrapeSystemeCommand}"></Setter>
                                        <Setter Property="CommandParameter" Value="{Binding}"></Setter>
                                    </Style>
                                </MenuItem.ItemContainerStyle>
                            </MenuItem>
                            <MenuItem Header="Video" Style="{DynamicResource MaterialDesignMenuItem}" ItemsSource="{Binding OnlySystemes}"
                              DisplayMemberPath="Name">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SubmenuOpened">
                                        <i:InvokeCommandAction Command="{Binding  DataContext.ChangeScrapeTypeCommand, ElementName=myWindow}"
