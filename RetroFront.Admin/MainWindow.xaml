                                        <Setter Property="CommandParameter" Value="{Binding}"></Setter>
                                    </Style>
                                </MenuItem.ItemContainerStyle>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="Screenscraper" Style="{DynamicResource MaterialDesignMenuItem}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SubmenuOpened">
                                    <i:InvokeCommandAction Command="{Binding  DataContext.ChangeScrapeSourceCommand, ElementName=myWindow}"
                                                       CommandParameter="2"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <MenuItem Header="Full Data" Style="{DynamicResource MaterialDesignMenuItem}" ItemsSource="{Binding OldSystemes}"
                              DisplayMemberPath="Name">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SubmenuOpened">
                                        <i:InvokeCommandAction Command="{Binding  DataContext.ChangeScrapeTypeCommand, ElementName=myWindow}"
