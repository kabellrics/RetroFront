<UserControl x:Class="RetroFront.Admin.Dialogs.Views.SystemeDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetroFront.Admin.Dialogs.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Stretch="Uniform">
            <Label Content="{Binding Name}"></Label>
        </Viewbox>
        <StackPanel Grid.Column="0" Grid.Row="3">
            <Label Content="Shortname"></Label>
            <Label Content="{Binding Shortname}"></Label>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="5">
            <Label Content="Platforme"></Label>            
            <Label Content="{Binding Platforme}"></Label>            
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="6">
            <Label Content="Theme"></Label>            
            <Label Content="{Binding Theme}"></Label>            
        </StackPanel>
        <Viewbox Stretch="Uniform" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2">
            <Label Content="{Binding CurrentTheme.Name}"></Label>
        </Viewbox>
        <Button Grid.Row="3" Grid.Column="1" Grid.RowSpan="4" Command="{Binding PreviousthemeCommand}">
            <Viewbox Stretch="Uniform">
                <Label Content="&lt;&lt;"></Label>
            </Viewbox>
        </Button>
        <Button Grid.Row="3" Grid.Column="3" Grid.RowSpan="4" Command="{Binding NextthemeCommand}">
            <Viewbox Stretch="Uniform">
                <Label Content="&gt;&gt;"></Label>
            </Viewbox>
        </Button>
        <Image Grid.Column="2" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" Source="{Binding Logo}"></Image>
        <Image Grid.Column="2" Grid.Row="5" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" Source="{Binding Bck}"></Image>
    </Grid>
</UserControl>
