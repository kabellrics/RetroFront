<Page
    x:Class="RetroFront.UWPClient.Views.PlateformePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewHelper="using:RetroFront.UWPClient.ViewHelper"
    xmlns:views="using:RetroFront.UWPClient.Views.Plateforme"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="FlipView">
            <views:FlipView></views:FlipView>
        </DataTemplate>
        <ViewHelper:PlateformeTemplateSelector x:Key="PlateformeTemplateSelector"
                       FlipView="{StaticResource FlipView}">
        </ViewHelper:PlateformeTemplateSelector>
    </Page.Resources>
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <ContentPresenter x:Name="contentpres" Content="{Binding DisplayType,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" ContentTemplateSelector="{StaticResource PlateformeTemplateSelector}"/>
            <!--
                The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.
            -->
        </Grid>
    </Grid>
</Page>
